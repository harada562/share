<div class="row">
	<%= render 'layouts/customer_header'%>
	<%= render 'layouts/customer_profile'%>
</div>


<dir class="row">
	<div class="col-lg-12">
		<div class="home_top_select">
				<div class="home_top_select__link">
			<!-- ゲストアカウントの場合 -->
			<% if current_customer.nick_name == "ゲストアカウント" %>
						<div class="home_top_select__link_box">
							<div class="home_top_select__link_item">
								<%= link_to 'スポット一覧', public_places_path,  class: "btn btn-info"%>
							</div>
							<div class="home_top_select__link_item">
								<%= link_to 'グループ一覧', public_groups_customers_path, class: "btn btn-warning"%>
							</div>
						</div>
						<div class="home_top_select__link_box">
							<div class="home_top_select__link_item">
								<%= link_to '会員一覧', public_customers_path, class: "btn btn-danger"%>
							</div>
						</div>
				</div>
			<% else %>
				<div class="home_top_select__link">
					<div class="home_top_select__link_box">
						<div class="home_top_select__link_item">
							<%= link_to 'スポット一覧', public_places_path,  class: "btn btn-info"%>
						</div>
						<div class="home_top_select__link_item">
							<%= link_to 'スポット登録', new_public_place_path, class: "btn btn-success"%>
						</div>
					</div>
					<div class="home_top_select__link_box">
						<div class="home_top_select__link_item">
							<%= link_to 'グループ一覧', public_groups_customers_path, class: "btn btn-warning"%>
						</div>
						<div class="home_top_select__link_item">
							<%= link_to '会員一覧', public_customers_path, class: "btn btn-danger"%>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</dir>