<%= render 'layouts/customer_header'%>
<div class="row">
	<div class="col-lg-12 place_new">
		<div>
		<h1>スポット登録</h1>
		</div>
		<div>
		<%= form_with model: @place, url: public_places_path, local: true do |f|%>
		<%= flash[:not_latitude]%>
		<%= render 'layouts/error_messages', model: @place %>
				<div class="place_new__form">
					<%= f.label :ジャンル %><br />
					<%= f.collection_select :genre_id, Genre.all, :id, :name %>
				</div>
				<div class="place_new__form">
					<%= f.label :場所名 %>(必須)<br />
					<%= f.text_field :place_name%>
				</div>
				<div class="place_new__form">
					<%= f.label :住所 %>(必須)<br />
					<%= f.text_field :address%>
				</div>
				<div class="place_new__form">
					<%= f.label :グループ選択 %><br />
					<%= f.select :group_id, GroupsCustomer.where(customer_id: current_customer.id).map { |g| [g.group.name, g.group.id]}, :include_blank => 'グループ選択なし'%>
				</div>
			<%= f.hidden_field :customer_id, :value => current_customer.id %>
			<%= f.submit "スポット登録",class: "btn btn-success" %>
		<% end %>
		</div>
	</div>
</div>