<%= render 'layouts/customer_header' %>
<%= render 'layouts/customer_profile' %>
<div class="row">
	<div class="col-lg-12">
		<div>
			<h1>グループ編集</h1>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div>
			<%= attachment_image_tag @group, :image, :fill, 60, 60, fallback: "group.png", size:'150x150', class: "img-circle"%>
		</div>
		<div>
			<%= form_with model: @group, url: public_group_path(@group.id), local: true do |f|%>
				<%= render 'layouts/error_messages', model: @group %>
				<div>
					<%= f.label :グループ名 %><br />
					<%= f.text_field :name%>
				</div>
				<div>
					<%= f.label :グループ画像 %><br />
					<%= f.attachment_field :image %>
				</div>
				<div>
					<%= f.label :グループ紹介文 %><br />
					<%= f.text_area :introduction ,:size=>"60x5"%>
				</div>
				<h2>公開ステータス</h2>
				<div>
					<%= f.label :公開 %><br />
					<%= f.radio_button :is_closed, [false] , local: true%>
				</div>
				<div>
					<%= f.label :非公開 %><br />
					<%= f.radio_button :is_closed, [true]%>
				</div>
				<div>
					<%= f.label :合言葉 %><br />
					<%= f.text_field :key_word%>
				</div>
				<%= f.submit "変更",class: "btn btn-success" %>
			<% end %>
		</div>
	</div>
</div>