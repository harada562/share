<%= render 'layouts/customer_header' %>
<%= render 'layouts/customer_profile' %>
<div class="col-lg-9">
	<h1>グループ作成</h1>
	<%= form_with model: @group, url: public_group_path(@group.id), local: true do |f|%>
	<%= render 'layouts/error_messages', model: @group %>
	<div>
		<%= f.label :グループ名 %><br />
		<%= f.text_field :name%>
	</div>
	<div>
		<%= f.label :グループ画像 %><br />
		<%= f.attachment_field :image %>
	</div>
	<div>
		<%= f.label :グループ紹介文 %><br />
		<%= f.text_area :introduction ,:size=>"60x5"%>
	</div>
	<div>
		<h2>公開ステータス</h2>
		<div>
			<%= f.label :公開 %><br />
			<%= f.radio_button :is_closed, [false] , local: true%>
		</div>
		<div>
			<%= f.label :非公開 %><br />
			<%= f.radio_button :is_closed, [true]%>
		</div>
	</div>
	<div>
			<%= f.label :合言葉 %><br />
			<%= f.text_field :key_word%>
	</div>
		<%= f.submit "変更",class: "btn btn-success" %>
	<% end %>
</div>