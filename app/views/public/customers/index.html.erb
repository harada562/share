<%= render 'layouts/customer_header' %>
<div class="col-lg-9">
	<h1>ユーザー一覧画面</h1>
	<table class="table">
		<tr>
			<th>プロフィール画像</th>
			<th>ニックネーム</th>
		</tr>
		<tr>
			<% @customers.each do |customer| %>
			<td><%= attachment_image_tag customer, :image, :fill, 50, 50, format: 'jpg', fallback: "" %></td>
			<td><%= customer.nick_name %></td>
			<td><%= link_to "詳細画面", public_customer_path(customer.id),class: "btn btn-success" %></td>
		</tr>
		<% end %>
	</table>
</div>