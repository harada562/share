<%= render 'layouts/customer_header' %>
<%= render 'layouts/customer_profile' %>
<div class="row">
	<div class="col-lg-12">
		<%= attachment_image_tag @group, :image, :fill, 60, 60, fallback: "group.png", size:'100x100'%>
		<h1><%= @group.name%>の部屋</h1>
		<!-- 管理者のみ変更可能（is_admin == true） -->
		<%= link_to "変更", edit_public_group_path(@group.id), class: "btn btn-success"%>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<h2>メンバー数</h2>
		<p><%= @groups.count%></p>
		<h2>投稿</h2>
		<p><%= @places.count%></p>
		<h2>グループ紹介</h2>
		<%= @group.introduction %>
	</div>
</div>